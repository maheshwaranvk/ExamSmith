# Orchestrator
APP_NAME=ExamSmith Orchestrator
ENV=dev
CORS_ORIGINS=http://localhost:3000

# Storage
STORAGE_BACKEND=inmemory  # inmemory|mongo
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=examsmith

# Operational controls
AUTO_PROCESS_RUNS=false
MAX_WORKER_CONCURRENCY=4

# Default LLM selection (overridable per run via CreateRunRequest.config)
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_LLM_TEMPERATURE=0.2
DEFAULT_LLM_TOP_P=1.0
DEFAULT_LLM_MAX_OUTPUT_TOKENS=800

# Provider credentials (optional)
# OPENAI_API_KEY=
# OPENAI_BASE_URL=https://api.openai.com/v1
# ANTHROPIC_API_KEY=
# ANTHROPIC_BASE_URL=https://api.anthropic.com
# ANTHROPIC_VERSION=2023-06-01

# Groq (OpenAI-compatible)
# GROQ_API_KEY=
# GROQ_BASE_URL=https://api.groq.com/openai/v1
MAX_AUTO_REGEN_ATTEMPTS=1
DEFAULT_EVAL_THRESHOLD=0.85

# Observability (OpenTelemetry)
# Set OTEL_EXPORTER_OTLP_ENDPOINT to your collector/phoenix endpoint.
# For OTLP/HTTP this is commonly: http://localhost:4318/v1/traces
OBSERVABILITY_ENABLED=true
OTEL_SERVICE_NAME=examsmith-orchestrator
# OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_CONSOLE=false
OTEL_SAMPLE_RATE=0.1
